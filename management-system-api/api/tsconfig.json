{
    "compilerOptions": {
        "module": "commonjs",
        "moduleResolution": "node",
        "pretty": true,
        "sourceMap": true,
        "target": "es6",
        "outDir": "./lib",
        "baseUrl": "./src",
        "strict": true,    
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
    },
    "include": [
        "src/**/*.ts"
    ],
    "exclude": [
        "node_modules", "lib"
    ]
}